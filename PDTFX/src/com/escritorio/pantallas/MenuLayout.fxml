<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="700.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.escritorio.controladores.MainController">
   <top> 
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleSalir" text="Salir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Propietarios">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleListadoPropietarios" text="Ver todos" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Zonas">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleListadoTipoZonas" text="Ver tipos de zonas" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Predios">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleListadoPredios" text="Listado predios" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Usuarios">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleListadoUsuarios" text="Listado de usuarios" />
                <MenuItem mnemonicParsing="false" onAction="#handleListadoRols" text="Listado de Roles" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Indicadores">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleListadoIndicadores" text="Listar" />
                <MenuItem mnemonicParsing="false" onAction="#handleListadoArbolIndicadores" text="Arbol Indicadores" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAcercaDe" text="Acerca de:" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCargarDatos" text="Cargar datos de prueba" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
